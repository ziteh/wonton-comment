{
  "name": "yangchun-comment-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm build:shared && pnpm --parallel --recursive dev",
    "build": "pnpm build:shared && pnpm --filter @yangchun-comment/client build && pnpm --filter @yangchun-comment/server build",
    "build:shared": "pnpm --filter @yangchun-comment/shared build",
    "build:client": "pnpm --filter @yangchun-comment/client build",
    "build:server": "pnpm --filter @yangchun-comment/server build",
    "test": "pnpm build:shared && pnpm --recursive test",
    "clean": "pnpm --recursive exec -- rm -rf dist node_modules/.cache",
    "reset": "pnpm clean && rm -rf node_modules && pnpm install",
    "deploy": "pnpm build && pnpm --filter @yangchun-comment/server deploy",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm eslint .",
    "lint:fix": "pnpm eslint . --fix",
    "type-check": "pnpm build:shared && pnpm --recursive type-check",
    "prepare": "lefthook install",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^1.12.3",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.15.1"
}
